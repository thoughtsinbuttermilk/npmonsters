{{#if logged_in}}
<section class="card">
    <header>
        <h3>{{post.pet_name}}</h3>

        <h4>{{post.pet_breed}}</h4>
    </header>   

    <img src="/images/{{post.file_name}}" alt="{{post.description}}">

    <div class="post-details">

        <p>{{post.description}}</p>
        <p>{{post.pet_name}} has been available from: {{format_date post.date_created}}</p>

    </div>
</section>
{{/if}}