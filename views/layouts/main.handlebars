<html lang='en'>

  <head>

    <meta charset='UTF-8' />

    <meta name='viewport' content='width=device-width, initial-scale=1.0' />

    <title>Foster's INC!</title>

    <link rel='stylesheet' href='/css/style.css' />

  </head>

  <body>

    <div class='flex-column justify-space-around'>

      <header class='display-flex justify-space-between align-center p-2'>

        <h1>Foster's INC!</h1>

        <nav>

          <!-- Conditionally render login or logout links -->

          {{#if logged_in}}

            <ul>
              <li><a href='/users/:{id}'>Profile</a></li>
              <li><a href='/posts'>See the Monsters!</a></li>
              <button id='logout' class='no-button'>Logout</button>
            </ul>

          {{else}}

            <ul>

              <li><a href='/login' id='login-link'>Login</a></li>

            </ul>

          {{/if}}
        </nav>

      </header>

      <main class='text-center mt-5'>

        <!-- Render the sub layout -->
        {{{body}}}

      </main>

      <footer>

      </footer>

    </div>

    <!-- Render script for logged in users only -->

    {{#if logged_in}}
      <script src='/js/logout.js'></script>

    {{/if}}
  </body>

</html>